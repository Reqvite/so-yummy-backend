    "schemas": {
      "UserSignUp": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": {
            "type": "string",
            "format": "name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "email@gmail.com"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        }
      },
      "UserLogin": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "email@gmail.com"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        }
      },
      "UserUpdate": {
        "type": "object",
        "required": ["name", "email"],
        "properties": {
          "name": {
            "type": "string",
            "example": "Bob"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "email@gmail.com"
          },
          "avatar": {
            "type": "string",
            "format": "binary"
          }
        }
      },
      "Recipe": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Name of the recipe"
          },
          "description": {
            "type": "string",
            "description": "Description of the recipe"
          },
          "category": {
            "type": "string",
            "description": "Category the recipe"
          },
          "time": {
            "type": "number",
            "description": "Time cooking of the recipe"
          },
          "ingredients": {
            "type": "array",
            "description": "Array ingredients of the recipe"
          },
          "instruction": {
            "type": "string",
            "description": "Instruction for cooking the recipe"
          },
          "avatar": {
            "type": "string",
            "format": "binary"
          }
        },
        "required": ["title", "description", "category", "time", "instruction"]
      },
      "MainRecipe": {
        "type": "object",
        "required": ["title", "description", "category", "time", "instruction"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the recipe"
          },
          "description": {
            "type": "string",
            "description": "Description of the recipe"
          },
          "category": {
            "type": "string",
            "description": "Category of the recipe"
          },
          "time": {
            "type": "number",
            "example": "90"
          },
          "ingredients": {
            "type": "array"
          },
          "instructions": {
            "type": "string",
            "description": "Instruction how to cooking the recipe"
          }
        }
      },
      "CategoryListRecipes": {
        "type": "array",
        "properties": {
          "list": {}
        }
      },
      "RecipeId": {
        "type": "string",
        "description": "ID of the recipe"
      },
      "GetRecipeByID": {
        "type": "object",
        "required": ["title", "description", "category", "time", "instruction"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the recipe"
          },
          "description": {
            "type": "string",
            "description": "Description of the recipe"
          },
          "category": {
            "type": "string",
            "description": "Category of the recipe"
          },
          "time": {
            "type": "number",
            "example": "90"
          },
          "ingredients": {
            "type": "array"
          },
          "instructions": {
            "type": "string",
            "description": "Instruction how to cooking the recipe"
          }
        }
      },
      "Ingredients": {
        "type": "object",
        "required": ["title", "description", "time"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the ingredient"
          },
          "description": {
            "type": "string",
            "description": "Description of the ingredient"
          },
          "time": {
            "type": "number",
            "example": "90"
          }
        }
      },
      "ShoppingList": {
        "type": "array",
        "properties": {
          "list": {}
        }
      },
      "IngredientId": {
        "type": "string",
        "description": "ID of the recipe"
      },
      "IngredientAddById": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the ingredient"
          },
          "description": {
            "type": "string",
            "description": "Description of the ingredient"
